<center>
    <div class="container well" style="margin-top: 50px">
        <div class="rows">
        <form action="/update_act/<%= @one_post.id %>" method="POST" style="margin-top: 20px">
            <h1>글 수정하기</h1>
            <div class="form-group">
              <label for="usr"> </label>
              <input name="head" type="text" class="form-control" id="usr" value="<%= @one_post.title %>"> 
            </div> 
            <div class="form-group">
              <label for="comment"> </label>
              <textarea name="body" class="form-control" rows="6" id="comment"><%= @one_post.content %></textarea>
            </div>
          <button type="submit" class="btn btn-default">수정하기</button>
        </form>
        </div>
    </div>  
</center>
    
